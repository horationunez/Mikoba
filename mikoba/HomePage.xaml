<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="mikoba.HomePage" xmlns:local="clr-namespace:mikoba.UI">
    <ContentPage Title="Actions" IconImageSource="mikoba.png">
         <StackLayout x:Name="btnContinue"
                     Grid.Row="1"
                     Orientation="Vertical"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
              <Label
                x:Name="lblInfo"
                Margin="20"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="Gray"
                Text="*"
                FontSize="Medium"/>
              <Button
                  Text="WalletHome"
                  CornerRadius="5"
                  Padding="20"
                  BackgroundColor="#f2f2f2"
                  TextColor="Blue"
                  Command="{Binding ShowWalletHomePageCommand}"
                  FontSize="18"/>
            <Button
                Text="Open Connection"
                    CornerRadius="5"
                    Padding="20"
                    BackgroundColor="#f2f2f2"
                    TextColor="Blue"
                    Command="{Binding OpenConnectionCommand}"
                    FontSize="18"/>
              <Button
                Text="Restore from Cloud"
                    CornerRadius="5"
                    Padding="20"
                    BackgroundColor="#f2f2f2"
                    TextColor="Blue"
                    FontSize="18"/>
                <Button
                    x:Name="btnDestroyWallet"
                Text="Destroy Wallet"
                    CornerRadius="5"
                    Padding="20"
                    BackgroundColor="#f2f2f2"
                    TextColor="Red"
                    FontSize="12"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Credentials" IconImageSource="mikoba.png">
           <StackLayout
                     Orientation="Horizontal"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <local:CredentialsListView Padding="0" Margin="0"
            />
               </StackLayout>
    </ContentPage>
    <ContentPage Title="Connections" IconImageSource="mikoba.png">
        <StackLayout VerticalOptions="Center">
            <Label
                Margin="20"
                TextColor="Gray"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="No connections yet.  Once you establish connections, they will show up here."
                FontSize="Body"/>
            <local:AddNewButton
                HorizontalOptions="Center"
                Command="{Binding ShowScanQrCodePageCommand}"
            />
        </StackLayout>
    </ContentPage>
</TabbedPage>
