<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns:local="clr-namespace:mikoba"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:abstractions="clr-namespace:SVG.Forms.Plugin.Abstractions;assembly=SVG.Forms.Plugin.Abstractions"
    x:Class="mikoba.UI.Components.BackButton"
    HorizontalOptions="Start"
    VerticalOptions="Start"
    Margin="12, 12, 0, 0"
>
    <ContentView.Content>
        <Frame Padding="0" Margin="0" HasShadow="False">
            <StackLayout Padding="0" Margin="0">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ClickBack"/>
                </StackLayout.GestureRecognizers>
                <abstractions:SvgImage
                    SvgAssembly="{Binding SvgAssembly}"
                    SvgPath="{Binding LeftArrowYellow}"
                    HeightRequest="32"
                    BackgroundColor="#F9F9F9"
                    WidthRequest="32"
                    Margin="0"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>